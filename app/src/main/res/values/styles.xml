    <!--    BottomSheetDialog Custom (youtube)-->
    <style name="DiaLogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in_bottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_bottom</item>
    </style>


    <!--    <style name="CustomBottomSheetDialog" parent="ThemeOverlay.MaterialComponents.BottomSheetDialog">-->
    <style name="CustomBottomSheetDialog" parent="Theme.Design.BottomSheetDialog">
        <item name="android:background">@drawable/bg_dialog</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <!--    Tablayout Custom-->
    <style name="TabTextStyle" parent="TextAppearance.AppCompat.Widget.ActionBar.Title.Inverse">
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!--    Button Custom-->
    <style name="MyButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:background">@drawable/bg_green_main_shape_corner_circle</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>

    <!--    TextView style Button-->
    <style name="MyTextViewButtonStyle" parent="Widget.MaterialComponents.TextView">
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">@dimen/define_dimen_12</item>
        <item name="android:paddingStart">@dimen/define_dimen_16</item>
        <item name="android:paddingEnd">@dimen/define_dimen_16</item>
        <item name="android:paddingBottom">@dimen/define_dimen_12</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!--    TextView in Flow Layout-->
    <!--    TextView in Flow Layout: Not Select-->
    <style name="MyTextViewFlow" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/bg_green_light_cancel_shape_corner_circle</item>
        <item name="android:layout_marginStart">@dimen/define_dimen_8</item>
        <item name="android:layout_marginEnd">@dimen/define_dimen_8</item>
        <item name="android:paddingStart">@dimen/define_dimen_16</item>
        <item name="android:paddingEnd">@dimen/define_dimen_16</item>
        <item name="android:paddingTop">@dimen/define_dimen_8</item>
        <item name="android:paddingBottom">@dimen/define_dimen_8</item>
    </style>

    <!--    TextView in Flow Layout: Not Select-->
    <style name="TextViewFlowSelected" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/bg_green_shape_corner_50</item>
        <item name="android:layout_marginStart">@dimen/define_dimen_8</item>
        <item name="android:layout_marginEnd">@dimen/define_dimen_8</item>
        <item name="android:paddingStart">@dimen/define_dimen_16</item>
        <item name="android:paddingEnd">@dimen/define_dimen_16</item>
        <item name="android:paddingTop">@dimen/define_dimen_8</item>
        <item name="android:paddingBottom">@dimen/define_dimen_8</item>
    </style>

    <!--    TextView App Primary-->
    <style name="TextViewAppPrimarySmall" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextViewAppPrimaryNormal" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!--    TextView Primary-->
    <style name="TextViewPrimarySmall" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextViewPrimaryNormal" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextViewPrimaryLarge" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:textSize">@dimen/text_size_large</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!--    TextViewSecondary-->
    <style name="TextViewItalicSecondaryXSmall" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/textColorSecondary</item>
        <item name="android:textSize">@dimen/text_size_xsmall</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="TextViewBoldSecondaryXSmall" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/textColorSecondary</item>
        <item name="android:textSize">@dimen/text_size_xsmall</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextViewSecondarySmall" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/textColorSecondary</item>
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>

    <style name="TextViewSecondaryNormal" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/textColorSecondary</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
    </style>

    <!--    Edittext-->
    <style name="EditTextPrimary">
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/textColorPrimary</item>
        <item name="android:textSize">@dimen/text_size_small</item>
    </style>

    <declare-styleable name="AspectRatioView">
        <attr name="aspectRatioEnabled" format="boolean" />
        <attr name="dominantMeasurement" format="enum">
            <enum name="Width" value="0" />
            <enum name="Height" value="1" />
        </attr>
        <attr name="aspectRatio" format="float" />

        <attr name="cornerRadius" format="dimension" />
        <attr name="roundedCorners">
            <flag name="topLeft" value="1" />
            <flag name="topRight" value="2" />
            <flag name="bottomRight" value="4" />
            <flag name="bottomLeft" value="8" />
            <flag name="all" value="15" />
        </attr>
    </declare-styleable>

    <declare-styleable name="ScrollControllableViewpager">
        <attr name="scrollable" format="boolean" />
    </declare-styleable>

    <attr name="itemActiveColor" format="color" />
    <attr name="itemInactiveColor" format="color" />
    <attr name="titleColorActive" format="color" />
    <attr name="titleColorInactive" format="color" />

    <declare-styleable name="PropertyBottomNavigation">
        <attr name="itemActiveColor" />
        <attr name="itemInactiveColor" />
        <attr name="titleColorActive" />
        <attr name="titleColorInactive" />
    </declare-styleable>

</resources>