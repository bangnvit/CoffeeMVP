<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/layout_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/define_dimen_16"
        android:layout_marginBottom="@dimen/define_dimen_10"
        android:background="@drawable/bg_color_white_border_divider_radius_12"
        android:orientation="vertical"
        android:paddingTop="@dimen/define_dimen_16"
        android:paddingBottom="@dimen/define_dimen_10"
        android:paddingHorizontal="@dimen/define_dimen_16">

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/define_dimen_12"
            app:cardElevation="0dp">

            <ImageView
                android:id="@+id/img_category"
                android:layout_width="@dimen/define_dimen_100"
                android:layout_height="@dimen/define_dimen_90"
                android:scaleType="centerCrop"
                tools:ignore="ContentDescription"
                tools:src="@drawable/ic_launcher_background" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tv_category_name"
            style="@style/TextViewPrimaryNormal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/define_dimen_5"
            android:gravity="center"
            android:textSize="@dimen/text_size_small"
            tools:text="Cà Phê Máy"/>

    </LinearLayout>

</layout>
