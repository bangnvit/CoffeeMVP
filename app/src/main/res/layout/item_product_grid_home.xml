<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:id="@+id/layout_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/define_dimen_8"
        android:layout_marginTop="@dimen/define_dimen_2"
        android:layout_marginBottom="@dimen/define_dimen_2"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/define_dimen_12"
            app:cardElevation="0dp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="@dimen/define_dimen_180">

                <ImageView
                    android:id="@+id/img_product"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    tools:ignore="ContentDescription"
                    tools:src="@drawable/ic_launcher_background" />

                <TextView
                    android:id="@+id/tv_sale_off"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="@dimen/define_dimen_10"
                    android:background="@drawable/bg_reduce_border_right_radius_8"
                    android:padding="@dimen/define_dimen_6"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_size_xsmall"
                    android:textStyle="bold"
                    tools:text="10 %" />
            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="@dimen/define_dimen_6"
            android:paddingBottom="@dimen/define_dimen_6">

            <TextView
                android:id="@+id/tv_product_name"
                style="@style/TextViewPrimaryNormal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="@string/app_name" />

            <TextView
                android:id="@+id/tv_price"
                style="@style/TextViewBoldSecondaryXSmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/define_dimen_2"
                tools:text="50.000 VNĐ" />

            <TextView
                android:id="@+id/tv_price_sale"
                style="@style/TextViewAppPrimarySmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/define_dimen_2"
                tools:text="45.000 VNĐ" />
        </LinearLayout>

    </LinearLayout>

</layout>
